<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BlazorApp.NativeClient"
             xmlns:shared="clr-namespace:BlazorApp.Components;assembly=BlazorApp.Components"
             x:Class="BlazorApp.NativeClient.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type shared:Main}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>
</ContentPage>